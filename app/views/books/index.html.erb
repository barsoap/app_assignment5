<div class='container px-5 px-sm-0'>

  <%= render 'layouts/errors', obj: @book %> <!--エラー-->

  <div class='row'>

    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %> <!--ユーザー情報-->
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %> <!--投稿フォーム-->
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'index', books: @books %> <!--投稿一覧-->
    </div>
  </div>
</div>