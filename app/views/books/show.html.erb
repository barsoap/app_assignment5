<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @Newbook %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %> <!--ユーザーアイコン(リンクでユーザー詳細へ)-->
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td> <!--本のタイトル(リンクで本の詳細へ)-->
          <td><%= @book.body %></td> <!--本の感想-->
          <td> <!--いいね-->
            <% if @book.liked_by?(current_user) %>
              <p>
                <%= link_to book_like_path(@book), method: :delete do %>
                  ♥<%= @book.likes.count %>いいね
                <% end %>
              </p>
            <% else %>
              <p>
                <%= link_to book_like_path(@book), method: :post do %>
                  ♡<%= @book.likes.count %>いいね
                <% end %>
              </p>
            <% end %>
          </td>
          <td> <!--コメント数表示-->
            <p>
              コメント数:<%= @book.post_comments.count %>
            </p>
          </td>
          <td> <!--自分の投稿だった時編集ボタン-->
            <% if @book.user == current_user %>
              <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
          <td> <!--自分の投稿だった時削除ボタン-->
            <% if @book.user == current_user %>
              <%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
            <% end %>
          </td>
        </tr>
      </table>

      <div> <!--コメント一覧 & コメント投稿-->
        <table>
          <% @post_comments.each do |post_comment| %>
            <tr>
              <td> <!--ユーザー画像-->
                <%= link_to(book.user) do %> <!--ユーザー画像-->
                  <%= image_tag post_comment.user.get_profile_image, size:'50x50' %>
                  <%= post_comment.user.name %>
                <% end %>
              </td>
              <td> <!--コメント表示-->
                <%= post_comment.comment %>
              </td>
              <td> <!--コメント削除ボタン-->
                <% if post_comment_user == current_user %>
                  <%= link_to 'Destroy', book_post_comment(post_comment.id), method: :delete %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </table>
        <div> <!--コメント送信-->
          <%= form_with model:@post_comment, url:book_post_comments_path(@book), method: :post, local:true do |f| %>
            <%= f.text_area :comment, class: '' %>
            <%= f.submit '送信' %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>